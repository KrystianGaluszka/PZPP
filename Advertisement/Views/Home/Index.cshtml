@model Advertisement.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/Advertise.css" rel="stylesheet" />

<div class="col-4 p-4 justify-content-end">
    <form asp-controller="Home" asp-action="Index">
        <span class="btn-group">
            <input class="form-control" type="text" name="SearchText" placeholder="Search Key" />
            <input class="p-1 ml-2 btn btn-sm btn-info" type="submit" value="Search" />
        </span>
    </form>
</div>

<partial name="PartialAdvertiseList" model="@Model.AdvertiseList" />

